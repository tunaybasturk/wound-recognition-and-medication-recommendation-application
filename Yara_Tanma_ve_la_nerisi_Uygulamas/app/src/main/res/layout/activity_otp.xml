<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OtpActivity"
        android:background="#D8E3E1"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/_124sdp"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="-5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.007"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sol_ust_resim" />

        <ImageView
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_150sdp"

            android:layout_gravity="center"
            android:src="@drawable/otp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Güvenlik Kodunu Gir\nEmail adresinize güvenlik kodu iletildi : "
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_30sdp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:gravity="center"
            android:id="@+id/showEmail"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#E4C63A"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/white"

            >

            <EditText
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/otp1"
                />

            <EditText
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/otp2"
                />

            <EditText
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/otp3"
                />

            <EditText
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/otp4"
                />

            <EditText
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/otp5"
                />

            <EditText
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:importantForAutofill="no"
                android:inputType="number"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:maxLength="1"
                android:id="@+id/otp6"
                />


        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_20sdp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Güvenlik kodu gelmedi mi?"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        android:layout_marginStart="@dimen/_60sdp"
        android:gravity="center">

    </TextView>

    <TextView
        android:id="@+id/tvResend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="@dimen/_2sdp"
        android:text="Tekrar Yolla"
        android:textColor="#5AC1AD"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold" />
</LinearLayout>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Onayla"
            android:layout_marginStart="@dimen/_25sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textSize="@dimen/_15sdp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="#30A08C"
            android:id="@+id/button"
            />
    </LinearLayout>
</layout>