<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8E3E1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_124sdp"
        android:layout_height="@dimen/_130sdp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sol_ust_resim" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/kayit_ol_email"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_61sdp"
        android:layout_marginTop="@dimen/_30sdp"
        app:boxBackgroundColor="#00000000"
        app:boxBackgroundMode="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hesap_olustur_text">

        <EditText
            android:id="@+id/email_kayit"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_53sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:background="@drawable/dialog_bg"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:paddingStart="@dimen/_22sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.701"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/kayit_ol_sifre_tekrar"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_61sdp"
        android:layout_marginTop="@dimen/_1sdp"
        app:boxBackgroundColor="#00000000"
        app:boxBackgroundMode="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayit_ol_sifre"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/sifre_tekrari_kayit"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_53sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:background="@drawable/dialog_bg"
            android:ems="10"
            android:hint="Şifre Tekrarı"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_22sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.701"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/kayit_ol_sifre"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_61sdp"
        android:layout_marginTop="@dimen/_1sdp"
        app:boxBackgroundColor="#00000000"
        app:boxBackgroundMode="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.581"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayit_ol_email"
        app:passwordToggleEnabled="true">

        <EditText
            android:id="@+id/sifre_kayit"
            android:layout_width="@dimen/_230sdp"
            android:layout_height="@dimen/_53sdp"
            android:layout_marginStart="@dimen/_1sdp"
            android:background="@drawable/dialog_bg"
            android:ems="10"
            android:hint="Şifre"
            android:inputType="textPassword"
            android:paddingStart="@dimen/_22sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:textSize="@dimen/_15sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.558"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/kayit_ol"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_53sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:backgroundTint="#30A08C"
        android:gravity="center"
        android:text="Kayıt Ol"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayit_ol_sifre_tekrar" />

    <TextView
        android:id="@+id/hesap_varmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Zaten bir üye misiniz?"
        android:textSize="@dimen/_11sdp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.416"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/kayit_ol" />

    <TextView
        android:id="@+id/giris_yap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_11sdp"
        android:text="Giriş Yap"
        android:textColor="#5AC1AD"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/hesap_varmi"
        app:layout_constraintTop_toBottomOf="@+id/kayit_ol" />

    <TextView
        android:id="@+id/hosgeldiniz"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_150sdp"
        android:text="Kayıt Ekranına Hoşgeldiniz!"
        android:textColor="@color/black"
        android:textSize="@dimen/_18sdp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_52sdp"
        android:background="#909897"
        android:layout_marginRight="@dimen/_1sdp"
        app:layout_constraintEnd_toEndOf="@id/hesap_olustur_text"
        app:layout_constraintHorizontal_bias="0.316"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hosgeldiniz">

    </View>

    <TextView
        android:id="@+id/hesap_olustur_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_44sdp"
        android:text="Yeni hesap oluştur"
        android:textSize="@dimen/_10sdp"
        android:textColor="#989D9D"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hosgeldiniz" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_52sdp"
        android:background="#909897"
        android:layout_marginLeft="@dimen/_1sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.741"
        app:layout_constraintStart_toStartOf="@id/hesap_olustur_text"
        app:layout_constraintTop_toBottomOf="@+id/hosgeldiniz">

    </View>


</androidx.constraintlayout.widget.ConstraintLayout>